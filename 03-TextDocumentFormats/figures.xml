<?xml version="1.0" encoding="UTF-8"?>
<geometricFigures>
    <figure>
        <name>Circle</name>
        <type>2D</type>
        <properties>
            <property>Radius</property>
            <property>Diameter</property>
        </properties>
        <formulas>
            <area>π * radius^2</area>
            <perimeter>2 * π * radius</perimeter>
        </formulas>
    </figure>
    <figure>
        <name>Square</name>
        <type>2D</type>
        <properties>
            <property>Side Length</property>
        </properties>
        <formulas>
            <area>side^2</area>
            <perimeter>4 * side</perimeter>
        </formulas>
    </figure>
    <figure>
        <name>Cylinder</name>
        <type>3D</type>
        <properties>
            <property>Side Length</property>
	    <property>Radius</property>
        </properties>
        <formulas>
            <surfaceArea>2 * 3.14 * radius * side + 2 * 3.14 * radius^2</surfaceArea>
            <volume>3.14 * radius^2 * side</volume>
        </formulas>
    </figure>
</geometricFigures>